#!/bin/sh
#
# start/stop NRTS processes - FreeBSD v7-v10
#

. /etc/rc.subr

name="nrts"
rcvar="${name}_enable"
start_cmd="${name}_start"
stop_cmd="${name}_stop"

nrts_start()
{
    NRTSRC="{{ nrts_home }}/etc/start/boot"
    if [ -f ${NRTSRC} ]; then
        echo "Starting NRTS"
        csh ${NRTSRC} > /dev/null &
    fi
}
        
nrts_stop()
{
    echo "Stopping NRTS"
    pkill -TERM -x isid
    pkill -TERM -x isidl
    pkill -TERM -x isi330
    pkill -TERM -x i10dld
    pkill -TERM -x nrts_edes
    pkill -TERM -x qhlp
    pkill -TERM -x tristar10
    pkill -TERM -x paro10
    pkill -TERM -x siomet
    sleep 2
    pkill -TERM -x ringserver
}

load_rc_config ${name}
run_rc_command "$@"

