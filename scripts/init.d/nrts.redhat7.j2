#!/bin/sh
#
# start/stop NRTS processes
#
# $Id: nrts,v 1.9 2013/05/14 21:03:33 dechavez Exp $

case "$1" in
'start')

    NRTSRC="{{ nrts_home }}/etc/start/boot"
    if [ -f ${NRTSRC} ]; then
        echo "Starting NRTS"
        csh ${NRTSRC} > /dev/null &
    fi
    ;;
        
'stop')
    echo "Stopping NRTS"
    pkill -TERM -x isid
    pkill -TERM -x isidl
    pkill -TERM -x i10dld
    pkill -TERM -x isi330
    pkill -TERM -x nrts_edes
    pkill -TERM -x qhlp
    pkill -TERM -x tristar10
    pkill -TERM -x paro10
    pkill -TERM -x sbds
    sleep 2
    pkill -TERM -x ringserver
    ;;
*)
    echo "Usage: {{ nrts_home }}/scripts/init.d/nrts { start | stop }"
    ;;
esac
