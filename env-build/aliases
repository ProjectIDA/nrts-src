alias cls clear
alias cp '/bin/cp -i'
alias df 'df -h'
alias ga 'git add'
alias gcm 'git commit -m'
alias gs 'git status'
alias gl 'git log'
alias gln 'git log --name-only'
alias gll 'git log --graph --pretty=oneline --abbrev-commit'
alias glln 'git log --graph --pretty=oneline --abbrev-commit --name-only'
alias grep 'egrep'
alias h history
alias la 'ls -Fla'
alias ll 'ls -Fl'
alias ls 'ls -F'
alias mv '/bin/mv -i'
alias pib 'ps -ax -o user,pid,%cpu,%mem,state,start,command | grep "\!*" | egrep -v "(grep| ps -)" | sort -k 7'
alias pid 'ps -aux | egrep "(\!*|USER)" | egrep -v "(grep| ps -)"'
alias ssh ssh -X
alias today 'date -u +%Y%j'
alias vi vim
